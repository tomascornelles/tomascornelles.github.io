<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <title @text="title || metadata.title"></title>
  <meta name="description" :content="description || metadata.description" />

  <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">

  <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg">
  <link rel="icon" type="image/png" href="/assets/images/favicon.png">
  <meta name="theme-color" content="white">

  <link href="https://fonts.googleapis.com/css2?family=Martian+Mono:wght@100;400;700&family=Roboto:wght@400;700&display=swap" 
        rel="preload" 
        as="font"
        onload="this.onload=null;this.rel='stylesheet'"
        webc:keep>
  <noscript>
    <link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400&Roboto:wght@400;900&display=swap" webc:keep>
  </noscript>

  <style webc:bucket="base">
    :root {
      --color-bg: white;
      --color-fg: black;
      --font: 'Roboto', sans-serif;
      --font-mono: 'Martian Mono', monospace;
      --unit: 10px;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --color-bg: black;
        --color-fg: white;
      }
    }

    html {
      font-size: var(--unit);
    }

    body {
      background-color: var(--color-bg);
      color: var(--color-fg);
      font-family: var(--font-mono);
      font-size: 1.6rem;
      line-height: 1.75;
      margin: 0 auto;
      max-width: calc(var(--unit) * 120);
      padding-top: 20dvh;
      padding: 20vh var(--unit) var(--unit);
    }

    main > section {
      padding-block-end:  calc(var(--unit) * 10);
    }

    h1, h2, h3 {
      font-family: var(--font-mono);
      font-weight: 300;
      line-height: 1.5;
      margin-block: 2em 1em;
      overflow-wrap: break-word;
    }

    h1 {
      font-size: 4rem;
      min-height: 80dvh;
      margin-top: 0;
      display: flex;
      align-items: end;
      padding-block-end: 10vh;
      box-sizing: border-box;
    }

    h2 {
      font-size: 3rem;
    }

    h3 {
      font-size: 2rem;
    }

    p {
      font-family: var(--font);
      margin-block-start: 0;
      margin-block-end: 1em;
    }

    a, [role=link] {
      text-decoration: none;
      box-shadow: inset 0 -1px var(--color-fg);
      color: var(--color-fg);
      background: none;
      border: none;
      transition: all .5s ease;
      padding: .2em;
      cursor: pointer;
    }

    a:hover, [role=link]:hover {
      color: var(--color-bg);
      box-shadow: inset 0 -5em var(--color-fg);
    }

    strong, b {
      font-weight: 900;
    }

    kbd {
      border: 1px solid var(--color-fg);
      padding: 0 .2em;
      box-shadow: 0 .1em var(--color-fg);
      font-family: var(--font-mono);
    }

    code, pre {
      font-family: var(--font-mono);
      font-size: 0.95em;
    }

    pre {
      padding: 1em;
      background-color: var(--color-fg);
      color: var(--color-bg);
    }

    svg path {
      fill: var(--color-fg);
    }

    @media (min-width: 768px) {
      h1 {
        font-size: 8rem;
      }
    }
  </style>

  <style @raw="getBundle('css', 'base')" webc:keep></style>
  <style @raw="getBundle('css')" webc:keep></style>
</head>

<body>
  <tc-header :title="title" webc:nokeep></tc-header>

  <main @raw="content"></main>

  <tc-footer webc:nokeep></tc-footer>

  <tc-favicon></tc-favicon>

  <script @raw="getBundle('js', 'defer')" webc:keep></script>
</body>

</html>
