<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <title @text="title || metadata.title"></title>
  <meta name="description" :content="description || metadata.description" />

  <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">

  <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg">
  <link rel="icon" type="image/png" href="/assets/images/favicon.png">
  <meta name="theme-color" content="white">

  <link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" 
        rel="preload" 
        as="font"
        onload="this.onload=null;this.rel='stylesheet'"
        webc:keep>
  <noscript>
    <link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" webc:keep>
  </noscript>

  <style webc:bucket="base">
    :root {
      --color-bg: white;
      --color-fg: black;
      --font: 'Space Mono', monospace;
      --unit: 10px;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --color-bg: black;
        --color-fg: white;
      }
    }

    html {
      font-size: var(--unit);
    }

    body {
      font-size: 1.6rem;
      background-color: var(--color-bg);
      color: var(--color-fg);
      font-family: var(--font);
      padding-top: 20dvh;
      max-width: calc(var(--unit) * 120);
      margin: 0 auto;
      padding: calc(var(--unit) * 20) var(--unit) var(--unit);
    }

    main > section {
      padding-block-end:  calc(var(--unit) * 20);
    }

    h1, h2, h3 {
      font-weight: normal;
      line-height: 1.0;
      margin-top: 2em;
    }

    h1 {
      font-size: 7rem;
    }

    h2 {
      font-size: 3rem;
    }

    h3 {
      font-size: 2rem;
    }

    a, [role=link] {
      text-decoration: none;
      box-shadow: inset 0 -2px var(--color-fg);
      color: var(--color-fg);
      transition: all .5s ease;
    }

    a:hover, [role=link]:hover {
      color: var(--color-bg);
      box-shadow: inset 0 -5em var(--color-fg);
    }

    kbd {
      border: 1px solid var(--color-fg);
      padding: 0 .2em;
      box-shadow: 0 .1em var(--color-fg);
    }

    code, pre {
      background-color: var(--color-fg);
      color: var(--color-bg);
      padding: 0 .2em;
    }

    pre {
      padding: 1em;
    }

    svg path {
      fill: var(--color-fg);
    }
  </style>

  <style @raw="getBundle('css', 'base')" webc:keep></style>
  <style @raw="getBundle('css')" webc:keep></style>
</head>

<body>
  <tc-header :title="title" webc:nokeep></tc-header>

  <main @raw="content"></main>

  <tc-footer webc:nokeep></tc-footer>

  <tc-favicon></tc-favicon>

  <script @raw="getBundle('js', 'defer')" webc:keep></script>
</body>

</html>
