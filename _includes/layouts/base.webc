<!doctype html>
<html :lang="page.lang">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">

  <!--- SEO info --->
  <title @text="title || metadata.title"></title>
  <meta name="description" :content="labels.seo.description || metadata.description" />

  <!--- Favicons --->
  <link rel="icon" type="image/svg+xml" href="/assets/images/favicon.svg">
  <link rel="icon" type="image/png" href="/assets/images/favicon.png">
  <meta name="theme-color" content="white">

  <!--- Fonts are loaded after the page --->
  <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400;1,700&family=Source+Code+Pro:wght@300;400;700&display=swap" 
        rel="preload" 
        as="font"
        onload="this.onload=null;this.rel='stylesheet'"
        webc:keep>
  <noscript>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,700;1,400;1,700&family=Source+Code+Pro:wght@300;400;700&display=swap" webc:keep>
  </noscript>

  <style webc:bucket="base">
    :root {
      --color-bg: white;
      --color-fg: black;
      --font: 'Lora', serif;
      --font-mono: 'Source Code Pro', monospace;
      --unit: 10px;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --color-bg: black;
        --color-fg: white;
      }
    }

    html {
      font-size: var(--unit);
    }

    body {
      background-color: var(--color-bg);
      color: var(--color-fg);
      font-family: var(--font);
      font-size: 1.7rem;
      line-height: 1.75;
      margin: 0 auto;
      max-width: calc(var(--unit) * 100);
      padding-top: 20dvh;
      padding: 20vh var(--unit) var(--unit);
    }

    main > section {
      padding-block-end:  calc(var(--unit) * 10);
    }

    h1, h2, h3 {
      font-family: var(--font-mono);
      font-weight: 300;
      line-height: 1.5;
      margin-block: 2em 1em;
      overflow-wrap: break-word;
      letter-spacing: -.05em;
    }

    h1 {
      font-size: 4rem;
      min-height: 80dvh;
      margin-top: 0;
      display: flex;
      align-items: end;
      padding-block-end: 10vh;
      box-sizing: border-box;
    }

    h2 {
      font-size: 3rem;
    }

    h3 {
      font-size: 2rem;
    }

    p {
      margin-block-start: 0;
      margin-block-end: 1em;
    }

    a, [role=link] {
      text-decoration: none;
      box-shadow: inset 0 -1px var(--color-fg);
      color: var(--color-fg);
      background: none;
      border: none;
      transition: all .5s ease;
      padding: .2em;
      cursor: pointer;
    }

    a:hover, [role=link]:hover {
      color: var(--color-bg);
      box-shadow: inset 0 -5em var(--color-fg);
    }

    button, [role=button] {
      display: block;
      text-align: center;
      padding: .5em 1em;
      background-color: var(--color-fg);
      color: var(--color-bg);
      border: .1em solid var(--color-fg);
      font-family: var(--font-mono);
      font-size: 1.6rem;
      box-shadow: inset 0 0 var(--color-bg);
    }

    button:hover, [role=button]:hover {
      color: var(--color-fg);
      box-shadow: inset 0 -5em var(--color-bg);
    }

    strong, b {
      font-weight: 900;
    }

    kbd {
      border: 1px solid var(--color-fg);
      padding: 0 .2em;
      box-shadow: 0 .1em var(--color-fg);
      font-family: var(--font-mono);
    }

    code, pre {
      font-family: var(--font-mono);
    }

    pre {
      padding: 1em;
      background-color: var(--color-fg);
      color: var(--color-bg);
    }

    svg path {
      fill: var(--color-fg);
    }

    @media (min-width: 768px) {
      h1 {
        font-size: 8rem;
      }

      button, [role=button] {
        display: inline-block;
      }
    }
  </style>

  <style @raw="getBundle('css', 'base')" webc:keep></style>
  <style @raw="getBundle('css')" webc:keep></style>
</head>

<body>
  <tc-header webc:nokeep
    :title="title" 
    :langs="langs"
    :labels="labels"></tc-header>

  <main @raw="content"></main>

  <tc-footer webc:nokeep
    :langs="langs"
    :labels="labels" ></tc-footer>

  <tc-favicon></tc-favicon>

  <script webc:keep 
    @raw="getBundle('js', 'defer')"></script>
</body>

</html>
