<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <title @text="title || metadata.title"></title>

  <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">

  <link rel="icon" href="" type="image/svg+xml">
  <meta name="theme-color" content="black" />

  <style webc:bucket="base">
    @import url('https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap');

    :root {
      --color-bg: white;
      --color-fg: black;
      --font: 'Space Mono', monospace;
      --unit: 10px;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --color-bg: black;
        --color-fg: white;
      }
    }

    html {
      font-size: var(--unit);
    }

    body {
      font-size: 1.6rem;
      background-color: var(--color-bg);
      color: var(--color-fg);
      font-family: var(--font);
      padding-top: 20dvh;
      margin: 0;
    }

    section {
      max-width: calc(var(--unit) * 120);
      margin: auto;
      padding: var(--unit);
    }

    h1, h2, h3 {
      font-weight: normal;
      line-height: 1.0;
      margin-top: 20rem;
    }

    h1 {
      font-size: 7rem;
    }

    h2 {
      font-size: 3rem;
    }

    h3 {
      font-size: 5rem;
      margin-block-end: -.75em;
      opacity: .1;
    }

    a, [role=link] {
      text-decoration: none;
      box-shadow: inset 0 -2px var(--color-fg);
      color: var(--color-fg);
      transition: all .5s ease;
    }

    a:hover, [role=link]:hover {
      color: var(--color-bg);
      box-shadow: inset 0 -5em var(--color-fg);
    }

    kbd {
      border: 1px solid var(--color-fg);
      padding: 0 .2em;
      box-shadow: 0 .1em var(--color-fg);
    }

    code, pre {
      background-color: var(--color-fg);
      color: var(--color-bg);
      padding: 0 .2em;
    }

    pre {
      padding: 1em;
    }

    svg path {
      fill: var(--color-fg);
    }
  </style>

  <style @raw="getBundle('css', 'base')" webc:keep></style>
  <style @raw="getBundle('css')" webc:keep></style>
</head>

<body>
  <tc-menu :title="title"></tc-menu>

  <div @raw="content" webc:nokeep></div>

  <tc-favicon></tc-favicon>

  <tc-footer></tc-footer>

  <script @raw="getBundle('js', 'defer')" webc:keep></script>
</body>

</html>
