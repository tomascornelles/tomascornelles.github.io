<!doctype html>
<html lang="es">

<head>
  <meta charset="utf-8">
  <meta name="theme-color" content="beige">
  <title @text="title || metadata.title"></title>

  <link rel="icon" href="/assets/images/favicon.svg">

  <style webc:bucket="base">
    @import url('https://fonts.googleapis.com/css2?family=Source+Code+Pro:ital,wght@0,300;0,400;0,700;1,400;1,700&display=swap');

    :root {
      --font-size: 1.5rem;
      --font-family: 'Source Code Pro', monospace;
      --gap: 8px;
      --color-bg: #eeeeee;
      --color-bg-alt: white;
      --color-fg: black;
      --color-accent: orange;
    }

    html {
      font-size: 10px;
    }
    
    body {
      font-family: var(--font-family);
      font-size: 1.5rem;
      color: var(--color-fg);
      background-color: var(--color-bg);
      padding: 0;
      margin: 0;
    }

    main {
      max-width: 800px;
      margin: auto;
      padding: var(--gap);
    }

    h1, h2, h3 {
      font-weight: 700;
      margin: 0;
      color: var(--color-accent);
    }

    h1 {
      font-size: calc(var(--font-size) * 5);
      margin-block-end: var(--gap);
    }

    h2 {
      font-size: calc(var(--font-size) * 3);
    }

    h3 {
      font-size: calc(var(--font-size) * 2);
    }
    
    a, [role=link] {
      color: var(--color-fg);
      cursor: pointer;
      text-decoration: none;
      box-shadow: inset 0 -.5em var(--color-accent);
    }
  </style>

  <style @raw="getBundle('css', 'base')" webc:keep></style>
  <style @raw="getBundle('css')" webc:keep></style>
  
</head>

<body>
  <main @raw="content"></main>

  <tc-favicon></tc-favicon>

  <script @raw="getBundle('js', 'defer')" webc:keep></script>
</body>
</html>
