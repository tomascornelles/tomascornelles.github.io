<style>
  header {
    position: fixed;
    top: 0;
    inset-inline: 0;
    transition: all .4s ease;
    background-color: var(--color-bg);
    z-index: 1;
    display: flex;
    align-items: top;
    justify-content: space-between;
    gap: 0;
    flex-wrap: initial;
    max-width: calc(var(--unit) * 100);
    margin: auto;
    padding: var(--unit);
    font-weight: 400;
    font-family: var(--font-mono);
  }

  header > * {
    flex-grow: 1;
    width: 100%;
    text-align: center;
  }

  header > *:first-child {
    text-align: left;
  }

  header > *:last-child {
    text-align: right;
  }

  header p {
    margin: 0 .5rem;
    visibility: hidden;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    cursor: pointer;
    transform: translateY(-2em);
    transition: all .4s ease;
  }

  header.sticky p {
    visibility: visible;
    transform: translateY(0);
  }

  header svg + span {
    display: none;
  }

  header > a, header > a:hover {
    box-shadow: none;
    max-width: 16rem;
  }

  header summary {
    margin: 0;
    list-style-type: none;
    cursor: pointer;
  }

  details summary::-webkit-details-marker {
    display:none;
  }

  header details a {
    display: block;
    padding: 1rem;
  }

  header details a:hover {
    box-shadow: inset 0 -5em var(--color-fg);
  }

  header #logo {
    transition: all .4s ease;
    height: 134px;
  }

  header #logo path {
    fill: var(--color-fg);
  }

  header.sticky #logo {
    height: calc(var(--unit) * 6.7 / 2);
   /* background: var(--color-fg);*/
  }

  header details > ul {
    overflow: hidden;
    list-style: none;
    padding: 0;
    margin: 11rem auto 0;
    position: absolute;
    inset-inline: 0;
    background: var(--color-bg);
    max-width: calc(var(--unit) * 120);
    transition: all .5s ease;
  }

  header details[open] > ul {
    animation: slide-down .4s;
  }

  header.sticky details ul {
    margin: 2rem  auto 0;
  }

  @media (max-height: 360px) {
    header #logo {
      height: 67px;
    }
    header details > ul {
      margin-block-start: 5rem;
    }
  }

  @media (min-width: 768px) {
    header details > ul {
      display: flex;
      width: 100%;
    }
     header details li {
       width: 100%;
       text-align: center;
     }
  }

  @keyframes slide-down {
    from {
      height: 0;
    }

    to {
      height: 100%;
    }
  }
</style>

<script webc:bucket="defer">
  window.onscroll = () => {
    const height = window.innerHeight;
    document.querySelector('header').classList.toggle('sticky', window.scrollY > 250);
  }

  document.querySelectorAll('header details a').forEach((item) => {
    item.addEventListener('click', () => {
      document.querySelector('header details').removeAttribute("open");
    });
  });

  document.querySelector('header > p').addEventListener('click', () => {
    window.scrollTo({
      top: 0,
    })
  });
</script>
