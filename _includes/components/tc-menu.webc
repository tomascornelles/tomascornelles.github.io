<style>
  tc-menu header {
    position: fixed;
    top: 0;
    inset-inline: 0;
    transition: all .4s ease;
    background-color: var(--color-bg);
    z-index: 1;
  }

  tc-menu section {
    display: flex;
    align-items: top;
    justify-content: space-between;
  }

  tc-menu section > * {
    flex-grow: 1;
    width: 100%;
    text-align: center;
  }

  tc-menu section > *:first-child {
    text-align: left;
  }

  tc-menu section > *:last-child {
    text-align: right;
  }

  tc-menu h1 {
    margin: .5rem 0;
    font-size: 2rem;
    visibility: hidden;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  tc-menu a, tc-menu a:hover {
    box-shadow: none;
  }

  tc-menu nav span {
    margin: 0;
    font-size: 2rem;
  }

  tc-menu nav a {
    display: block;
    padding: 1em 1rem;
  }

  tc-menu nav a:hover {
    box-shadow: inset 0 -5em var(--color-fg);
  }

  tc-menu .sticky h1 {
    visibility: visible;
  }

  tc-menu #logo {
    transition: all .4s ease;
    height: 67px;
  }

  tc-menu .sticky #logo {
    height: calc(var(--unit) * 6.7 / 2);
    background-color: var(--color-fg);
  }

  tc-menu nav ul {
    height: 0;
    overflow: hidden;
    list-style: none;
    padding: 0;
    margin: 3.7rem auto 0;
    position: absolute;
    left: 0;
    right: 0;
    background: var(--color-bg);
    transition: all .4s ease;
    max-width: calc(var(--unit) * 120);
  }

  tc-menu .sticky nav ul {
    margin-top: 1rem;
  }

  tc-menu nav:hover ul {
    height: calc(3 * 3.5em); /* 4 elements, 1.5 line-height + 1 padding-top + 1 padding-bottom */
  }
</style>

<script webc:bucket="defer">
  window.onscroll = () => {
    const height = window.innerHeight;
    document.querySelector('header').classList.toggle('sticky', window.scrollY > 250);
  }
</script>
